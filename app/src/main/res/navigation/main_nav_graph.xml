<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph.xml"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="dev.aman.inquire.individual.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/createFragment"
        android:name="dev.aman.inquire.individual.ui.create.CreateFragment"
        android:label="fragment_create"
        tools:layout="@layout/fragment_create" >
        <action
            android:id="@+id/action_createFragment_to_feedsFragment"
            app:destination="@id/feedsFragment" />
        <action
            android:id="@+id/action_createFragment_to_addCodeFragment"
            app:destination="@id/addCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/accountFragment"
        android:name="dev.aman.inquire.individual.ui.profile.AccountFragment"
        android:label="fragment_bookmarked"
        tools:layout="@layout/fragment_bookmarked" >
        <action
            android:id="@+id/action_accountFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_accountFragment_to_individualLoginActivity"
            app:destination="@id/individualLoginActivity" />
        <action
            android:id="@+id/action_accountFragment_to_accountUpdateActivity"
            app:destination="@id/accountUpdateActivity" />
    </fragment>
    <fragment
        android:id="@+id/feedsFragment"
        android:name="dev.aman.inquire.individual.ui.home.feeds.FeedsFragment"
        android:label="fragment_feeds"
        tools:layout="@layout/fragment_feeds" />
    <fragment
        android:id="@+id/addCodeFragment"
        android:name="dev.aman.inquire.individual.ui.create.form.AddCodeFragment"
        android:label="fragment_add_code"
        tools:layout="@layout/fragment_add_code" >
        <action
            android:id="@+id/action_addCodeFragment_to_feedsFragment"
            app:destination="@id/feedsFragment" />
    </fragment>
    <activity
        android:id="@+id/individualLoginActivity"
        android:name="dev.aman.inquire.individual.ui.login.IndividualLoginActivity"
        android:label="activity_login_individual"
        tools:layout="@layout/activity_login_individual" />
    <activity
        android:id="@+id/accountUpdateActivity"
        android:name="dev.aman.inquire.individual.ui.profile.AccountUpdateActivity"
        android:label="activity_account_update"
        tools:layout="@layout/activity_account_update" />


</navigation>